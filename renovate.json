{
    "$schema": "https://docs.renovatebot.com/renovate-schema.json",
    "dependencyDashboard": true,
    "extends": [
        "config:recommended",
        "group:monorepos",
        "group:recommended",
        "workarounds:javaLTSVersions",
        ":prHourlyLimitNone",
        ":prConcurrentLimitNone",
        ":renovatePrefix"
    ],
    "assigneesFromCodeOwners": true,
    "description": "Config",
    "commitMessagePrefix": "Test ",
    "configMigration": true,
    "labels": [
        "renovate",
        "dependency-upgrade"
    ],
    "osvVulnerabilityAlerts": true,
    "reviewersFromCodeOwners": true,
    "packageRules": [
        {
            "groupName": "Major version dependencies",
            "groupSlug": "major-updates",
            "matchUpdateTypes": [
                "major"
            ]
        },
        {
            "groupName": "Minor version dependencies",
            "groupSlug": "minor-updates",
            "matchUpdateTypes": [
                "minor"
            ]
        },
        {
            "groupName": "Patch, pin, digest version dependencies",
            "groupSlug": "patch-ping-digest-updates",
            "matchUpdateTypes": [
                "patch",
                "pin",
                "digest",
                "lockFileMaintenance"
            ]
        },
        {
            "groupName": "Spring Framework",
            "groupSlug": "spring-updates",
            "matchPackageNames": [
                "org.springframework{/,}**"
            ]
        },
        {
            "groupName": "Amazon AWS",
            "groupSlug": "amazonaws",
            "matchPackageNames": [
                "com.amazonaws{/,}**"
            ]
        },
        {
            "groupName": "Flyway",
            "groupSlug": "flyway",
            "matchPackageNames": [
                "flyway",
                "flyway/flyway",
                "org.flywaydb{/,}**"
            ]
        },
        {
            "groupName": "Database layer dependencies",
            "groupSlug": "db-layer",
            "matchPackageNames": [
                "org.postgresql{/,}**"
            ]
        },
        {
            "groupName": "Trade Republics internal dependencies",
            "groupSlug": "trade-republic",
            "matchPackageNames": [
                "com.traderepublic{/,}**"
            ]
        },
        {
            "groupSlug": "linters",
            "matchPackageNames": [
                "com.pinterest:ktlint",
                "com.pinterest:ktlint{/,}**"
            ]
        },
        {
            "groupName": "SonarQube",
            "groupSlug": "sonarqube",
            "matchPackageNames": [
                "org.sonarqube",
                "org.sonarqube{/,}**"
            ]
        }
    ]
}
